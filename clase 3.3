#include <iostream>
#include <vector>

int main() {
    std::vector<char> nombres[5];
    std::vector<int> numeroLetras;

    std::cout << "Ingrese 5 nombres:\n";

    for (int i = 0; i < 5; i++) {
        std::cout << "Nombre " << i+1 << ": ";
        char nombre[100];
        std::cin >> nombre;

        for (int j = 0; nombre[j] != '\0'; j++) {
            nombres[i].push_back(nombre[j]);
        }

        numeroLetras.push_back(nombres[i].size());
    }

    std::cout << "\nNÃºmero de letras utilizadas en cada nombre:\n";

    for (int i = 0; i < 5; i++) {
        std::cout << "Nombre " << i+1 << ": " << numeroLetras[i] << " letras\n";
    }
return 0;

}
